{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./out-tsc/vitest",
    "types": [
      "node",
      "vite/client",
      "vitest",
      "vitest/globals",
      "vitest/importMeta"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*.d.ts",
    "src/**/*.spec.js",
    "src/**/*.spec.ts",
    "src/**/*.test.js",
    "src/**/*.test.ts",
    "vite.config.mts",
    "vite.config.ts",
    "vitest.config.mts",
    "vitest.config.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.app.json"
    }
  ]
}
