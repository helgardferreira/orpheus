{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": null,
    "esModuleInterop": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "lib": ["ES2023", "DOM", "DOM.Iterable"],
    "module": "ESNEXT",
    "moduleResolution": "bundler",
    "outDir": "dist",
    "rootDir": "src",
    "tsBuildInfoFile": "dist/tsconfig.app.tsbuildinfo",
    "types": ["vite/client"],
    "useDefineForClassFields": true,
    "verbatimModuleSyntax": true
  },
  "exclude": [
    "dist",
    "eslint.config.cjs",
    "eslint.config.js",
    "eslint.config.mjs",
    "out-tsc",
    "src/**/*.spec.js",
    "src/**/*.spec.jsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "src/**/*.test.js",
    "src/**/*.test.jsx",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "vite.config.mts",
    "vite.config.ts",
    "vitest.config.mts",
    "vitest.config.ts"
  ],
  "include": ["src/**/*.js", "src/**/*.jsx", "src/**/*.ts", "src/**/*.tsx"],
  "references": [
    {
      "path": "../../libs/solid-xstate/tsconfig.lib.json"
    },
    {
      "path": "../../libs/shared/schemas/tsconfig.lib.json"
    },
    {
      "path": "../../libs/shared/actors/tsconfig.lib.json"
    }
  ]
}
